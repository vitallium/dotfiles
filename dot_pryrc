# frozen_string_literal: true

Pry.editor = 'nvim'

if Pry::Prompt[:rails]
  Pry.config.prompt = Pry::Prompt[:rails]
else
  Pry.config.prompt = Pry::Prompt[:nav]
end

# The '?' command defaults to 'show-doc', which is deprecated in Pry.
# Remap it to use the recommended 'show-source -d' instead.
# This can be removed once Pry defaults to this behavior or removes show-doc.
Pry.commands.alias_command '?', 'show-source -d'

require 'pry-byebug'

if defined?(PryByebug)
  def pp(obj)
    Pry::ColorPrinter.pp(obj)
  end
end

# Load amazing_print
begin
  require 'amazing_print'
  AmazingPrint.pry!
rescue LoadError => e
  puts "no amazing_print :( #{e}"
end
