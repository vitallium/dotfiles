  hostname: serenity
  pinentry_bin: /usr/bin/pinentry-gnome3
  dircolors_bin: dircolors
  fonts:
    kitty:
      name: MonoLisa
      size: 12
    emacs:
      monospace: "12.0"
      variable: "12.0"
  git:
    gpg:
      key: EA8703DF57BC7168
