---
# vim:ft=gotmpl.yaml
{{ $email := promptString "email" -}}

color: true
progress: true
format: yaml

edit:
  command: "nvim"

data:
  email: {{ $email }}
  zed:
    font:
      name: "Berkeley Mono"
      size: 14
  {{- if eq .chezmoi.os "linux" }}
  pinentry_bin:
    arm: /usr/bin/pinentry-gnome3
    intel: /usr/bin/pinentry-gnome3
  git:
    gpg:
      key: EA8703DF57BC7168
      bin: gpg2
  kitty:
    font:
      name: "MonoLisa"
      size: 12
  {{- else if eq .chezmoi.os "darwin" }}
  pinentry_bin:
    arm: /opt/homebrew/bin/pinentry-mac
    intel: /usr/local/bin/pinentry-mac
  git:
    gpg:
      key: EA8703DF57BC7168
      bin: gpg
  kitty:
    font:
      name: "Berkeley Mono"
      size: 14
  {{- end }}
