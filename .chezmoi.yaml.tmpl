data:
  {{- if eq .chezmoi.os "linux" }}
  hostname: serenity
  pinentry_bin: /usr/bin/pinentry-gnome3
  git_gpg: gpg2
  dircolors_bin: dircolors
  fonts:
    kitty:
      name: MonoLisa
      size: 12
    emacs:
      monospace: "12.0"
      variable: "12.0"
  {{- else if eq .chezmoi.os "darwin" }}
  hostname: firefly
  pinentry_bin: /opt/homebrew/bin/pinentry-mac
  git_gpg: gpg
  dircolors_bin: gdircolors
  fonts:
    kitty:
      name: MonoLisa
      size: 14
    emacs:
      monospace: "14.0"
      variable: "16.0"
  {{- end }}
  asdf_version: v0.11.0
format: yaml
