{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "slash_commands": {
    "docs": {
      "enabled": true
    }
  },
  "theme": {
    "light": "One Light",
    "dark": "One Dark"
  },
  "buffer_font_family": "Berkeley Mono Variable",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "journal": {
    "hour_format": "hour24",
    "path": "~/Documents/Journal"
  },
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph"]
    }
  },
  "lsp": {
    "rust-analyzer": {
      "inlayHints": {
        "maxLength": null,
        "lifetimeElisionHints": {
          "useParameterNames": true,
          "enable": "skip_trivial"
        },
        "closureReturnTypeHints": {
          "enable": "always"
        }
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "experimentalFeaturesEnabled": true,
        "enabledFeatures": {
          "codeActions": true,
          "codeLens": true,
          "completion": true,
          "definition": true,
          "diagnostics": false, // until Zed supports pull-type diagnostics
          "documentHighlights": true,
          "documentLink": true,
          "documentSymbols": true,
          "foldingRanges": true,
          "formatting": true,
          "hover": true,
          "inlayHint": true,
          "onTypeFormatting": true,
          "selectionRanges": true,
          "semanticHighlighting": true,
          "signatureHelp": true,
          "typeHierarchy": true,
          "workspaceSymbol": true
        },
        "featuresConfiguration": {
          "inlayHint": {
            "implicitHashValue": true,
            "implicitRescue": true
          }
        }
      }
    },
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    }
  }
}
