{
  "theme": "One Dark",
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 15,
  "ui_font_family": "Zed Sans",
  "ui_font_size": 14,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "journal": {
    "hour_format": "hour24",
    "path": "~/Documents/Journal"
  },
  "languages": {
    "Ruby": {
      "language_servers": [
        "rubocop",
        "!ruby-lsp",
        "!tailwindcss-language-server",
        "!solargraph",
        "..."
      ]
    }
  },
  "lsp": {
    "rust-analyzer": {
      "inlayHints": {
        "maxLength": null,
        "lifetimeElisionHints": {
          "useParameterNames": true,
          "enable": "skip_trivial"
        },
        "closureReturnTypeHints": {
          "enable": "always"
        }
      }
    },
    "solargraph": {
      "initialization_options": {
        "diagnostics": false,
        "formatting": false
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "experimentalFeaturesEnabled": true,
        "featuresConfiguration": {
          "inlayHint": {
            "enableAll": true
          }
        }
      }
    },
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false,
        "layoutMode": true,
        "lintMode": true
      }
    },
    "tailwindcss-language-server": {
      "includeLanguages": {
        "erb": "html",
        "ruby": "html"
      },
      "experimental": {
        "classRegex": ["\\bclass:\\s*'([^']*)'"]
      }
    }
  }
}
